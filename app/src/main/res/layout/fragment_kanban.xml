<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#dddddd"
    tools:context=".fragment.test.KanbanMainFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/picProfile"
                android:layout_width="70dp"
                android:layout_height="80dp"
                android:layout_alignParentStart="true"
                android:layout_margin="10dp"
                android:src="@mipmap/basic_profile_pic"
                android:elevation="2dp"
                app:civ_border_color="#ffffff"
                app:civ_border_width="5dp" />

            <android.support.v7.widget.CardView
                android:id="@+id/cardProfile"
                android:layout_toEndOf="@+id/picProfile"
                style="@style/GeneralCardView"
                android:layout_height="80dp">

                <TextView
                    android:id="@+id/textProfileInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|left"
                    android:layout_margin="10dp"
                    android:text="박준규/ 팀원\n컴퓨터공학과 14학번"
                    android:textSize="18dp" />

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/cardReport"
                android:layout_below="@+id/cardProfile"
                style="@style/GeneralCardView">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="TextView" />
                    </LinearLayout>

                    <Button
                        android:id="@+id/btnKanban"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="칸반보기" />

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/cardQuestList"
                android:layout_below="@+id/cardReport"
                style="@style/GeneralCardView">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="10dp">

                    <ListView
                        android:id="@+id/questList"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:divider="@android:color/transparent"
                        android:dividerHeight="10.0sp" />
                </RelativeLayout>

            </android.support.v7.widget.CardView>

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>