<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    app:cardCornerRadius="3dp"
                    app:cardElevation="2dp">
                <RelativeLayout
                    android:id="@+id/result_layout_character"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:elevation="5dp">

                    <TextView
                        android:id="@+id/result_layout_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="10dp"
                        android:layout_marginBottom="5dp"
                        android:lines="2"
                        android:text="Result of\nThis user"
                        android:textColor="#000000"
                        android:textSize="20dp" />
                    <TextView
                        android:id="@+id/result_layout_grade"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_alignParentLeft="true"
                        android:layout_above="@+id/result_layout_title"
                        android:text="A+"
                        android:textSize="45dp"
                        android:textColor="#1cff36"/>
                </RelativeLayout>
                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    app:cardCornerRadius="3dp"
                    app:cardElevation="2dp">
                    <com.jaredrummler.materialspinner.MaterialSpinner
                        android:id="@+id/result_user_spinner"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="0dp"
                        android:layout_marginBottom="0dp">
                    </com.jaredrummler.materialspinner.MaterialSpinner>

                </android.support.v7.widget.CardView>
                <include layout="@layout/template_contribution_result" />

                <android.support.v7.widget.CardView
                    android:layout_margin="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="3dp"
                    app:cardElevation="2dp">
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="타임라인"
                            android:textSize="16dp"
                            android:padding="8dp"/>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:background="#dddddd"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="10dp"/>
                            <android.support.v7.widget.RecyclerView
                                android:id="@+id/result_timeline_recycler"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                            </android.support.v7.widget.RecyclerView>
                    </LinearLayout>
                </android.support.v7.widget.CardView>
            </LinearLayout>
        </FrameLayout>
    </android.support.v4.widget.NestedScrollView>

</LinearLayout>