<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardCornerRadius="3dp"
        app:cardElevation="2dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/template_result_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="참여도"
                android:textSize="16dp"
                android:padding="8dp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#dddddd"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"/>
            <TextView
                android:id="@+id/template_contribution_text_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:layout_marginLeft="10dp"
                android:text="Descriptions"
                />
            <com.github.mikephil.charting.charts.PieChart
                android:id="@+id/template_contribution_pie_chart"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_width="match_parent"
                android:layout_height="300dp"></com.github.mikephil.charting.charts.PieChart>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>