<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:id="@+id/template_contribution_text_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:layout_marginLeft="30dp"
        />
    <com.github.mikephil.charting.charts.BarChart
        android:id="@+id/template_contribution_barchart"
        android:layout_below="@id/template_contribution_text_score"
        android:layout_width="match_parent"
        android:layout_height="300dp"></com.github.mikephil.charting.charts.BarChart>
</RelativeLayout>