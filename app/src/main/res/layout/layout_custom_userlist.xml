<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.github.lguipeng.library.animcheckbox.AnimCheckBox
        android:id="@+id/layout_list_checkbox"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentLeft="true"
        android:layout_margin="10dp"
        android:layout_centerVertical="true"
        app:stroke_width="2dp"
        app:stroke_color="#00b023"
        app:circle_color="#b3ffa7"/>
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/layout_list_profile_pic"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/layout_list_checkbox"
        android:src="@mipmap/basic_profile_pic"/>
    <TextView
        android:id="@+id/layout_list_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:text="name"
        android:textColor="#000000"
        android:textSize="16dp"
        android:layout_toRightOf="@id/layout_list_profile_pic"
        android:layout_marginLeft="10dp"/>
</RelativeLayout>