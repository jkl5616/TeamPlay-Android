<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="120dp">

    <RelativeLayout
        android:id="@+id/template_timeline_lines_layout"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true">

        <View
            android:id="@+id/template_timeline_line"
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:layout_marginStart="20dp"
            android:layout_centerHorizontal="true"
            android:background="#5a8bff"
            />
        <View
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentTop="true"
            android:background="@drawable/timeline_circle"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"
            />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/template_timeline_description_layout"
        android:layout_toRightOf="@id/template_timeline_lines_layout"
        android:layout_margin="15dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/template_timeline_time"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:text="05/28"
            android:textColor="#000000"
            android:layout_marginTop="7dp"/>
        <TextView
            android:id="@+id/template_timeline_description_title"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@id/template_timeline_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="점수 제목"
            android:textSize="20dp"
            android:textColor="#000000"/>
        <TextView
            android:id="@+id/template_timeline_description"
            android:layout_below="@id/template_timeline_description_title"
            android:layout_toRightOf="@id/template_timeline_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="점수 내용"/>
    </RelativeLayout>
</RelativeLayout>