<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="wrap_content">
<RelativeLayout
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:layout_width="match_parent"
    android:layout_height="@dimen/team_template_size"
    android:background="@drawable/rounded_corners"
    android:layout_margin="@dimen/team_list_margin">
    <TextView
        android:padding="5dp"
        android:id="@+id/team_template_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Team Name"/>
    <TextView
        android:padding="5dp"
        android:id="@+id/team_template_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/team_template_name"
        android:text="Team description"/>
</RelativeLayout>
</RelativeLayout>
